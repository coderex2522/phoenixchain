<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar
        android:id="@+id/meToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center_horizontal|center_vertical"
                android:text="我的"
                android:textSize="20sp"/>
        </LinearLayout>

    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:padding="10dp"
                android:background="?attr/colorPrimary">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_margin="8dp"
                    android:id="@+id/civ_icon_image"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:src="@drawable/nav_icon"
                    android:layout_centerInParent="true"
                    android:layout_above="@+id/tv_username" />
                <TextView
                    android:id="@+id/tv_phone_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:text="186****0516"
                    android:textColor="#FFF"
                    android:textSize="14sp" />
                <TextView
                    android:id="@+id/tv_username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_above="@id/tv_phone_number"
                    android:layout_centerHorizontal="true"
                    android:text="Lsz0517"
                    android:textColor="#FFF"
                    android:textSize="14sp" />
            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="50dp">
            <LinearLayout
                android:background="@drawable/nav_settings_bg"
                android:id="@+id/personal_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icon_info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_info"
                    android:layout_marginLeft="16dp" />
                <TextView
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个人信息"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"/>


            </LinearLayout>
            <LinearLayout
                android:background="@drawable/nav_settings_bg"
                android:id="@+id/property"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icon_property"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_property"
                    android:layout_marginLeft="16dp" />
                <TextView
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的资产（余额）"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"/>
            </LinearLayout>
            <LinearLayout
                android:background="@drawable/nav_settings_bg"
                android:id="@+id/ll_my_orders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icon_order"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_order"
                    android:layout_marginLeft="16dp" />
                <TextView
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="我的订单"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"/>


            </LinearLayout>
            <LinearLayout
                android:background="@drawable/nav_settings_bg"
                android:id="@+id/safe_settings"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/icon_safe_settings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/ic_safe_settings"
                    android:layout_marginLeft="16dp" />
                <TextView
                    android:padding="8dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="安全设置"
                    android:layout_marginLeft="16dp"
                    android:textSize="16sp"/>
            </LinearLayout>

        </LinearLayout>
        <Button
            android:id="@+id/logging_out"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安全退出"
            android:padding="8dp"
            android:background="#3F51B5"
            android:layout_gravity="center"
            android:layout_marginTop= "48dp"/>
    </LinearLayout>
</LinearLayout>