<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/transaction_record_bg"
    android:padding="8dp">
    <TextView
        android:id="@+id/tv_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="false"
        android:text="2010/6/19\n  11：11"
        android:layout_centerVertical="true"

        />
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_margin="16dp"
        android:id="@+id/icon_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/icon_transation"
        android:layout_toRightOf="@+id/tv_date"
        />
    <RelativeLayout
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/icon_transaction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:singleLine="false"
            android:text="+9.99"

            />
        <TextView
            android:id="@+id/tv_towhom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_sum"


            android:singleLine="false"
            android:text="快乐的哒"

            />
        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:singleLine="false"
            android:text="-转账"
            android:layout_below="@+id/tv_sum"
            android:layout_toRightOf="@+id/tv_towhom"

            />


    </RelativeLayout>


</RelativeLayout>